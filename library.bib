@article{Tsai1998,
abstract = {BACKGROUND: Hypofunction of N-methyl-D-aspartate (NMDA) subtype glutamate receptor has been implicated in the pathophysiology of schizophrenia. D-serine is a full agonist of the glycine site of NMDA receptor, an endogenous cotransmitter enriched in corticolimbic regions and distributed in parallel with NMDA receptor. Supplementation of D-serine may improve the symptoms of schizophrenia.

