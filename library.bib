@inproceedings{Zaremba2013,
abstract = {The mammalian hippocampal formation has long been known to contain assemblies of principal neurons for the encoding of contextual positional information, but how these ensembles evolve over time has remained elusive. Using virally-expressed genetically-encoded calcium indicators in area CA1 it is possible to image activity from a large population of CA1 pyramidal neurons through a chronically implanted cranial window that remains stable for at least four weeks. Following training during which mice learn to run while head-fixed on a treadmill, we employ this imaging system to monitor pyramidal cell activity during navigation of a one-dimensional environment containing rich sensory cues. By tracking the mouse's position in this environment we observe robust spatially-tuned calcium responses in CA1 pyramidal cells as the mouse explores the context. Serial imaging of the same population of cells allows us to assess the population dynamics in spatial tuning over days and weeks. Here we found that over time as the mouse learns a new environment there is a gradual refinement of place cell properties, suggesting the existence of network mechanisms by which spatial coding is progressively refined during learning, leading to a more efficient representational ensemble. We are investigating the extent to which this refinement process involves anatomically defined subpopulations of CA1 pyramidal cells and network interactions. Moreover, we are exploring the disruption of this process in pathological states using the etiologically validated Df(16)A+/- mouse model of schizophrenia. Understanding these questions can shed light on the mechanisms by which the hippocampus represents space and facilitates both navigation and memory.},
author = {Zaremba, J and Danielson, N and Kaifosh, P and Diamantopoulou, N and Gogos, J and Losonczy, A},
