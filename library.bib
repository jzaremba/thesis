month = {oct},
number = {20},
pages = {6402--13},
pmid = {8815919},
title = {{Gamma oscillation by synaptic inhibition in a hippocampal interneuronal network model}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/8815919 http://www.jneurosci.org/content/16/20/6402.short},
