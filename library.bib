doi = {10.1371/journal.pbio.1001607},
file = {:home/jeff/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Kelemen, Fenton - 2013 - Key Features of Human Episodic Recollection in the Cross-Episode Retrieval of Rat Hippocampus Representations o.pdf:pdf},
issn = {15449173},
journal = {PLoS Biology},
number = {7},
pmid = {23874154},
title = {{Key Features of Human Episodic Recollection in the Cross-Episode Retrieval of Rat Hippocampus Representations of Space}},
volume = {11},
